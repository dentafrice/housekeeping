%h1 Manage Users

= tabs

.clearfix

%table.table.table-striped
  %tr
    %th ID
    %th Username
    %th Email
    %th Actions
  - @users.each do |user|
    %tr
      %td= link_to user.id, admin_user_path(user)
      %td= user.username
      %td= user.email
      %td
        = link_to 'Edit', edit_admin_user_path(user), :class => 'btn btn-small'
        = link_to 'Delete', admin_user_path(user), :class => 'btn btn-danger btn-small', :method => :delete